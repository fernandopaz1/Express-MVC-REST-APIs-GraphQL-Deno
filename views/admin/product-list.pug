extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main 
        if hasProducts > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title} 
                        div.card__image 
                            img(src=product.imageUrl , alt="A Book")
                        div.card__content 
                            h2.product__price #{product.price}
                            p.product__description #{product.description}
                        div.card__actions
                            a.btn(href="/admin/edit-product") Edit
                            form.card__actions(action="/admin/delete-product" method="DELETE")
                                button.btn Delete
        else 
            h1.product__title No products 