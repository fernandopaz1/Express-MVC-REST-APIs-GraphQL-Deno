extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
block content
    main 
        form.product-form(action=`/edit-product/${product.id}`, method="POST")
            .form-control
                label(for="title") Title
                input(name="title",type="text", id="title", value=product.title)
            .form-control
                label(for="imageUrl") Image Url
                input(name="imageUrl", id="imageUrl", value=product.imageUrl)
            .form-control
                label(for="price") Price
                input(name="price", type="number", id="price", value=product.price)
            .form-control
                label(for="description") Description
                textarea(name="description", type="text", rows="5", id="description") #{product.description}
            button.btn.submit Save Product